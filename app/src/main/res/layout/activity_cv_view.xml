<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/PageBackgroundCOlOR">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                        <LinearLayout
                            android:layout_width="416dp"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:paddingTop="20px"
                            app:layout_constraintBaseline_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"

                            >

                                <ImageButton
                                    android:id="@+id/arrowbutton"
                                    android:layout_width="83dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/PageBackgroundCOlOR"
                                    android:paddingLeft="20px"
                                    android:src="@drawable/_arrow_1_ek1"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

                                <TextView
                                    android:layout_width="295dp"
                                    android:layout_height="46dp"
                                    android:layout_marginLeft="0px"
                                    android:layout_marginTop="10px"
                                    android:background="@drawable/main_box"
                                    android:gravity="left"
                                    android:layout_gravity="center"
                                    android:paddingLeft="60px"
                                    android:paddingTop="10px"
                                    android:text="Guide to writing a CV"
                                    android:fontFamily="@font/inter"
                                    android:textColor="@color/PageBackgroundCOlOR"
                                    android:textSize="24dp"
                                    />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="introduction for the lesson"
                            android:textSize="25dp"/>

                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                                    android:id="@+id/activity_cvView_youtubePlayerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:videoId="dQw4w9WgXcQ"
                                    app:autoPlay="true"
                                     />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="video recap"
                            android:textSize="30dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                                <HorizontalScrollView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fillViewport="true"
                                    android:orientation="horizontal">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">
                                                        <View
                                                            android:layout_width="347dp"
                                                            android:layout_height="602dp"
                                                            android:layout_alignParentLeft="true"
                                                            android:layout_alignParentTop="true"
                                                            android:layout_marginLeft="75px"
                                                            android:layout_marginTop="30px"
                                                            android:background="@drawable/rectangle_4"
                                                            />

                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:orientation="vertical">

                                                                <ImageView
                                                                    android:layout_width="800px"
                                                                    android:layout_height="800px"
                                                                    android:layout_marginLeft="125px"
                                                                    android:layout_marginTop="75px"
                                                                    android:background="@drawable/main_box" />

                                                                <TextView
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_marginLeft="125px"
                                                                    android:layout_marginTop="75px"
                                                                    android:text="text...."
                                                                    android:textSize="40dp" />

                                                        </LinearLayout>



                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">
                                                        <View
                                                            android:layout_width="347dp"
                                                            android:layout_height="602dp"
                                                            android:layout_alignParentLeft="true"
                                                            android:layout_alignParentTop="true"
                                                            android:layout_marginLeft="75px"
                                                            android:layout_marginTop="30px"
                                                            android:background="@drawable/rectangle_4"
                                                            />

                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:orientation="vertical">

                                                                <ImageView
                                                                    android:layout_width="800px"
                                                                    android:layout_height="800px"
                                                                    android:layout_marginLeft="125px"
                                                                    android:layout_marginTop="75px"
                                                                    android:background="@drawable/main_box"
                                                                    />

                                                                <TextView
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="text...."
                                                                    android:textSize="40dp"
                                                                    android:layout_marginLeft="125px"
                                                                    android:layout_marginTop="75px"
                                                                    />

                                                        </LinearLayout>



                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">
                                                        <View
                                                            android:layout_width="347dp"
                                                            android:layout_height="602dp"
                                                            android:layout_alignParentLeft="true"
                                                            android:layout_alignParentTop="true"
                                                            android:layout_marginLeft="75px"
                                                            android:layout_marginTop="30px"
                                                            android:background="@drawable/rectangle_4"
                                                            />

                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:orientation="vertical">

                                                                <ImageView
                                                                    android:layout_width="800px"
                                                                    android:layout_height="800px"
                                                                    android:layout_marginLeft="125px"
                                                                    android:layout_marginTop="75px"
                                                                    android:background="@drawable/main_box"
                                                                    />

                                                                <TextView
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="text...."
                                                                    android:textSize="40dp"
                                                                    android:layout_marginLeft="125px"
                                                                    android:layout_marginTop="75px"
                                                                    />

                                                        </LinearLayout>



                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">
                                                        <View
                                                            android:layout_width="347dp"
                                                            android:layout_height="602dp"
                                                            android:layout_alignParentLeft="true"
                                                            android:layout_alignParentTop="true"
                                                            android:layout_marginLeft="75px"
                                                            android:layout_marginTop="30px"
                                                            android:background="@drawable/rectangle_4"
                                                            />

                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:orientation="vertical">

                                                                <ImageView
                                                                    android:layout_width="800px"
                                                                    android:layout_height="800px"
                                                                    android:layout_marginLeft="125px"
                                                                    android:layout_marginTop="75px"
                                                                    android:background="@drawable/main_box"
                                                                    />

                                                                <TextView
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="text...."
                                                                    android:textSize="40dp"
                                                                    android:layout_marginLeft="125px"
                                                                    android:layout_marginTop="75px"
                                                                    />

                                                        </LinearLayout>



                                                </RelativeLayout>


                                                <FrameLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp" />


                                        </LinearLayout>
                                </HorizontalScrollView>




                        </LinearLayout>


                </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:id="@+id/NavBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="20px"
            tools:context=".activity.MainActivity">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">


                        <ImageButton
                            android:id="@+id/searchbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5px"
                            android:layout_weight="0"
                            android:background="@drawable/ellipse_11"
                            android:src="@drawable/_loupe_1"
                            tools:ignore="SpeakableTextPresentCheck" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ellipse_1_ek1"
                    android:gravity="center">

                        <ImageButton
                            android:id="@+id/HomeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5px"
                            android:layout_weight="0"
                            android:background="@drawable/ellipse_11"
                            android:src="@drawable/_home_1__1"
                            tools:ignore="SpeakableTextPresentCheck" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                        <ImageButton
                            android:id="@+id/DiscussionsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5px"
                            android:layout_weight="0"
                            android:background="@drawable/ellipse_11"
                            android:src="@drawable/blogging_1"
                            tools:ignore="SpeakableTextPresentCheck" />

                </RelativeLayout>

        </LinearLayout>
</LinearLayout>












