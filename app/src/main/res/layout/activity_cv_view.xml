<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF8E1"
    tools:context=".cvView">

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="416dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="20px"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            >

                <ImageButton
                    android:id="@+id/arrowbutton"
                    android:layout_width="83dp"
                    android:layout_height="match_parent"
                    android:background="@color/PageBackgroundCOlOR"
                    android:paddingLeft="20px"
                    android:src="@drawable/_arrow_1_ek1"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

                <TextView
                    android:id="@+id/createposttxt"
                    android:layout_width="295dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="0px"
                    android:layout_marginTop="10px"
                    android:background="@drawable/main_box"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:paddingLeft="60px"
                    android:paddingTop="10px"
                    android:text="Guide to writing a CV"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/PageBackgroundCOlOR"
                    android:textSize="24dp"
                    />


        </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_marginTop="80px"
            android:layout_width="match_parent"
            android:foregroundGravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topbar"
            app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">


                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="900px"
                            android:layout_height="1200px"
                            android:layout_marginHorizontal="70px"
                            android:paddingHorizontal="30px"
                            android:textAlignment="viewStart"
                            android:background="@drawable/text_box"
                            android:text="Resume and CV:
                                        1-A resume is a one- to two-page document
2-presents key facts about your professional experience, educational background, and skills.
                                                        3-is used for job search.
                                         CV

                                               1- is a longer document
2-details the whole course of your career
                                3- used for academic purposes.



"
                            android:fontFamily="@font/inter"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="900px"
                            android:layout_height="1200px"
                            android:background="@drawable/text_box"
                            android:text="
things that should be included:

1-Include a link to your up to date LinkedIn profile within your introductory details.
                                 2-highlight how you overcame challenges both personally and as a team member.
                                3-Shout about your achievements
                        4-Include two forms of contact, email and mobile
                5-Mention any interests/hobbies
6-Double check your grammar
        7- Add a profile picture

"
                            android:layout_marginHorizontal="70px"
                            android:paddingHorizontal="30px"
                            android:textAlignment="viewStart"
                            android:fontFamily="@font/inter"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="1000px"
                            android:layout_height="1200px"
                            android:background="@drawable/text_box"
                            android:text="bad example:"
                            android:fontFamily="@font/inter"
                            android:layout_marginHorizontal="70px"
                            android:paddingHorizontal="30px"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="25dp" />


                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="1000px"
                            android:layout_height="1200px"
                            android:layout_marginHorizontal="70px"
                            android:paddingHorizontal="30px"
                            android:textAlignment="viewStart"
                            android:background="@drawable/text_box"
                            android:text="content holder"

                            android:fontFamily="@font/inter"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <FrameLayout
                            android:id="@+id/flFragment"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />


                </LinearLayout>


        </HorizontalScrollView>


                <View
                    android:id="@+id/videobox"
                    android:layout_width="347dp"
                    android:layout_height="219dp"
                    android:layout_marginTop="576dp"
                    android:background="@drawable/main_box"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <VideoView
                android:id="@+id/videoView"
                android:layout_width="290dp"
                android:layout_height="181dp"
                app:layout_constraintBottom_toBottomOf="@+id/videobox"
                app:layout_constraintEnd_toEndOf="@+id/videobox"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="@+id/videobox" />



</androidx.constraintlayout.widget.ConstraintLayout>