<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/PageBackgroundCOlOR">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                        <LinearLayout
                            android:layout_width="416dp"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:paddingTop="20px"
                            app:layout_constraintBaseline_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            >

                                <ImageButton
                                    android:id="@+id/arrowbutton"
                                    android:layout_width="83dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/PageBackgroundCOlOR"
                                    android:paddingLeft="20px"
                                    android:src="@drawable/_arrow_1_ek1"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

                                <TextView
                                    android:id="@+id/TopicName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="0px"
                                    android:layout_marginTop="10px"
                                    android:background="@drawable/main_box"
                                    android:gravity="left"
                                    android:layout_gravity="center"
                                    android:paddingLeft="60px"
                                    android:paddingRight="30px"
                                    android:paddingTop="10px"
                                    android:text=""
                                    android:fontFamily="@font/inter"
                                    android:textColor="@color/PageBackgroundCOlOR"
                                    android:textSize="20dp"
                                    />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/intro"
                            android:layout_marginTop="30px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="introduction for the lesson"
                            android:textSize="25dp"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30px"
                            >

                                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                                    android:id="@+id/activity_cvView_youtubePlayerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:videoId="y154-LSICCo"
                                    app:autoPlay="true"
                                     />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/VideoRecap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="video recap"
                            android:textSize="30dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="30px"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                                <HorizontalScrollView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fillViewport="true"
                                    android:orientation="horizontal">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="50px"
                                                    android:layout_marginLeft="50px">

                                                        <View
                                                            android:layout_width="347dp"
                                                            android:layout_height="602dp"
                                                            android:background="@drawable/rectangle_4" />

                                                        <LinearLayout
                                                            android:layout_width="340dp"
                                                            android:layout_height="wrap_content"
                                                            android:orientation="vertical"
                                                            android:gravity="center"
                                                            android:layout_marginTop="25px">
                                                                <TextView
                                                                    android:id="@+id/recaptitle1"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:gravity="center"
                                                                    android:background="@drawable/main_box"
                                                                    android:fontFamily="@font/inter"
                                                                    android:text="recaptitle1"
                                                                    android:textColor="@color/PageBackgroundCOlOR"
                                                                    android:textSize="40dp" />


                                                                <TextView
                                                                    android:id="@+id/c1text1"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="text...."
                                                                    android:textSize="40dp" />



                                                        </LinearLayout>



                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="50px"
                                                    android:layout_marginLeft="50px">

                                                        <View
                                                            android:layout_width="347dp"
                                                            android:layout_height="602dp"
                                                            android:background="@drawable/rectangle_4" />

                                                        <LinearLayout
                                                            android:layout_width="340dp"
                                                            android:layout_height="wrap_content"
                                                            android:orientation="vertical"
                                                            android:gravity="center"
                                                            android:layout_marginTop="25px">
                                                                <TextView
                                                                    android:id="@+id/recaptitle2"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:gravity="center"
                                                                    android:background="@drawable/main_box"
                                                                    android:fontFamily="@font/inter"
                                                                    android:text="recaptitle1"
                                                                    android:textColor="@color/PageBackgroundCOlOR"
                                                                    android:textSize="40dp" />


                                                                <TextView
                                                                    android:id="@+id/c2text1"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="text...."
                                                                    android:textSize="40dp" />



                                                        </LinearLayout>



                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="50px"
                                                    android:layout_marginLeft="50px">

                                                        <View
                                                            android:layout_width="347dp"
                                                            android:layout_height="602dp"
                                                            android:background="@drawable/rectangle_4" />

                                                        <LinearLayout
                                                            android:layout_width="340dp"
                                                            android:layout_height="wrap_content"
                                                            android:orientation="vertical"
                                                            android:gravity="center"
                                                            android:layout_marginTop="25px">
                                                                <TextView
                                                                    android:id="@+id/recaptitle3"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:gravity="center"
                                                                    android:background="@drawable/main_box"
                                                                    android:fontFamily="@font/inter"
                                                                    android:text="recaptitle1"
                                                                    android:textColor="@color/PageBackgroundCOlOR"
                                                                    android:textSize="40dp" />


                                                                <TextView
                                                                    android:id="@+id/c3text1"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="text...."
                                                                    android:textSize="40dp" />



                                                        </LinearLayout>



                                                </RelativeLayout>


                                                <FrameLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp" />


                                        </LinearLayout>


                                </HorizontalScrollView>

                        </LinearLayout>

                </LinearLayout>

        </ScrollView>

</LinearLayout>












