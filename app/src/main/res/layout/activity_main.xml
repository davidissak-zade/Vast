<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D0E9C5">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
               android:layout_height="wrap_content"
               android:layout_width="match_parent">

                <View
                    android:id="@+id/view"
                    android:layout_width="347dp"
                    android:layout_height="219dp"
                    android:layout_marginLeft="75px"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/main_box" />

                <TextView
                    android:id="@+id/welcome_to_"
                    android:layout_width="199dp"
                    android:layout_height="49dp"
                    android:layout_marginLeft="110px"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Welcome to "
                    android:textAppearance="@style/welcome_to_"
                    android:textSize="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="252dp"
                    android:layout_height="92dp"
                    android:layout_marginLeft="185px"
                    android:layout_marginTop="300px"
                    android:background="@drawable/messagebox"
                    android:fontFamily="@font/inter"
                    android:gravity="start"
                    android:paddingHorizontal="20px"
                    android:paddingTop="5dp"
                    android:text="Be not afraid of growing slowly, be afraid of standing still"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="143dp"
                    android:layout_height="133dp"
                    android:layout_marginLeft="560px"
                    android:layout_marginBottom="300px"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.552"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view"

                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/vastlogo" />

           </RelativeLayout>


            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter"
                    android:layout_marginLeft="10dp"
                    android:text="Academics and employment"
                    android:textColor="@color/black"
                    android:textSize="27dp" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/CV"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/cvimg"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CV"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/interview"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/inter"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Interview"
                                android:fontFamily="@font/inter"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/scholarship"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/scholer"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="Scholarships"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <ImageButton
                                android:id="@+id/exam"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#D0E9C5"
                                android:scaleType="fitXY"
                                android:src="@drawable/exam" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="Psychometry "
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/university"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/universittyy"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="University Briefs"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                        </LinearLayout>





                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />



                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/inter"
                    android:text="Finances"
                    android:textColor="@color/black"
                    android:textSize="27dp" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/bankaccount"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/bankk"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/inter"
                                android:text="Bank account"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/saving"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/saving"
                                />

                            <TextView
                                android:layout_width="138dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/inter"
                                android:text="Saving"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/visa"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/viissa"
                                />

                            <TextView
                                android:layout_width="104dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/inter"
                                android:text="Visa Card"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/loan"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="Bank Loans"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/bills"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/bill"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="Bills"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/taxes"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/taxx"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="Taxes"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />



                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Essentials"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter"
                    android:layout_gravity="left"
                    android:textSize="27dp"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/license"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/drive"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="License"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/insurace"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/neww"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Insurance "
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/renting"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/rentt"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="Rent"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/car"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/carr"
                                />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/inter"
                                android:textColor="@color/black"
                                android:text="Car matters"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/mail"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/mail"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:textColor="@color/black"
                                android:text="Mailing"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/laundry"
                                android:background="#D0E9C5"
                                android:layout_width="126dp"
                                android:layout_height="114dp"
                                android:scaleType="fitXY"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:src="@drawable/lan"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter"
                                android:text="Laundry and Ironing"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />



