<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:layout_height="match_parent"
    android:background="@color/PageBackgroundCOlOR"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MemberCommunityActivity">

    <LinearLayout
        android:id="@+id/MemberActivityTopBar"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:orientation="horizontal"
        android:paddingTop="20px"

        >

        <ImageButton
            android:id="@+id/MemberCommunityBackButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/PageBackgroundCOlOR"
            android:paddingLeft="20px"
            android:layout_marginRight="20px"
            android:src="@drawable/_arrow_1_ek1"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageButton>

        <TextView
            android:id="@+id/MemberCommunityTXT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:background="@drawable/main_box"
            android:gravity="center"
            android:text="Member Community"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:textColor="@color/PageBackgroundCOlOR"
            android:textSize="24sp"

            />


    </LinearLayout>
    //topbar that includes button back and pagename


    <LinearLayout
        android:id="@+id/memberCommunityContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/welcomeandbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
            android:id="@+id/memberCommunityWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heythere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Hey there friend!"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
            !--welcome--!

            <TextView
                android:id="@+id/explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="This is your place to connect with\nother members of Vast, ask questions\nand get tips from the Vast community"
                android:textColor="@color/textCOLOR"
                android:textSize="16sp"
                android:textStyle="bold" />
            !--explanation --!

        </LinearLayout>

            <ImageButton
                android:id="@+id/createPostButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:paddingTop="15px"
                android:background="@drawable/main_box"
                android:backgroundTint="@color/textCOLOR"
                android:src="@drawable/plus__1__5" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/commentSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/comment1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/comment1INFO"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40px"
                        android:orientation="vertical"
                        android:translationY="60px">

                        <TextView
                            android:id="@+id/commentator1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="june.IOves.dolph1ns"
                            android:textColor="@color/textCOLOR"
                            android:fontFamily="@font/inter"

                            />

                        <TextView
                            android:id="@+id/commenttime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19/7/22     16:23"
                            android:textColor="@color/CommentBackgroundCOLOR"
                            />

                    </LinearLayout>
                    // Comment Info

                    <View
                        android:id="@+id/commentTRIANGLE1"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:background="@drawable/polygon_12"
                        android:translationY="72px"
                        />

                    <LinearLayout
                        android:id="@+id/commentContent1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/main_box"
                        android:padding="50px"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/commentHeader1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="looking for a good driving teacher!"
                            android:fontFamily="@font/inter"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/commentTXT1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hi guys:) i've been trying to find a good driving teacher in the Tel Aviv for a while now, does anyone have any recommendations?"
                            android:fontFamily="@font/inter"
                            android:textSize="16sp"
                            android:textColor="@color/textCOLOR"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ButtonsHolder1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20px"
                        android:layout_marginLeft="80px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:layout_marginRight="30px"
                            android:text="14.3K"/>

                        <ImageButton
                            android:id="@+id/upbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/up"
                            android:layout_marginRight="10px"
                            />
                        <ImageButton
                            android:id="@+id/downbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/down"
                            android:layout_marginRight="34px"
                            />

                        <ImageButton
                            android:id="@+id/CommentButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/comment_3__1"/>

                    </LinearLayout>

                </LinearLayout>  <!-- Comment 1 -->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/CommentsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>



    </LinearLayout>

</LinearLayout>