<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D8f2cd"
    tools:context=".arabicActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <View
                    android:id="@+id/view"
                    android:layout_width="347dp"
                    android:layout_height="219dp"
                    android:layout_marginLeft="75px"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/main_box" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="146dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="45dp"
                        app:srcCompat="@drawable/logo_bright" />
                </LinearLayout>


                <TextView
                    android:id="@+id/message"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="185px"
                    android:layout_marginTop="300px"
                    android:background="@drawable/messagebox"
                    android:fontFamily="@font/inter"
                    android:foregroundGravity="right"
                    android:gravity="start"
                    android:paddingHorizontal="20px"
                    android:paddingTop="5dp"
                    android:text="لا تخافوا من النمو ببطء ، خافوا من الوقوف بلا حركة"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textCOLOR"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/welcome_to_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/inter"
                    android:gravity="right"
                    android:text="أهلاً بكم في "
                    android:textAppearance="@style/welcome_to_"
                    android:textSize="30dp" />


            </RelativeLayout>


            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="18dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/inter"
                    android:text="الأكاديمي والتوظيف"
                    android:textColor="@color/textCOLOR"
                    android:textSize="20dp" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:orientation="horizontal"
                    android:background="#D8F2CD">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#63FDF8E1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="149dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageButton
                                android:id="@+id/CV"
                                android:layout_width="86dp"
                                android:layout_height="99dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/cvimg" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/inter"
                                android:text="سيرة ثاتية"
                                android:textAlignment="center"
                                android:textColor="@color/textCOLOR"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/scholarship"
                                android:layout_width="103dp"
                                android:layout_height="90dp"
                                android:layout_margin="15px"
                                android:background="#63FDF8E1"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/scholer" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="منحة دراسية"
                                android:textColor="@color/textCOLOR"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/interview"
                                android:layout_width="97dp"
                                android:layout_height="90dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/inter" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="مقابلة عمل"
                                android:fontFamily="@font/inter"
                                android:textColor="@color/textCOLOR"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/exam"
                                android:layout_width="96dp"
                                android:layout_height="94dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/exam" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="بسيخومتري "
                                android:textColor="@color/textCOLOR"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/university"
                                android:layout_width="98dp"
                                android:layout_height="96dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/universittyy" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="جامعات"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="@color/textCOLOR"
                                android:textSize="15dp" />

                        </LinearLayout>





                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />



                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/inter"
                    android:text="اقتصادية"
                    android:textColor="@color/textCOLOR"
                    android:textSize="20dp" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:background="#D8F2CD"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#63FDF8E1"
                        >


                        <LinearLayout
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageButton
                                android:id="@+id/bankaccount"
                                android:layout_width="101dp"
                                android:layout_height="79dp"
                                android:layout_margin="20px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/bankk" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/inter"
                                android:text="بنك"
                                android:textAlignment="center"
                                android:textColor="@color/textCOLOR"
                                android:textSize="15dp" />

                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/visa"
                                android:layout_width="113dp"
                                android:layout_height="104dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/viissa" />

                            <TextView
                                android:layout_width="104dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/inter"
                                android:text="كرت الفيزا"
                                android:textColor="@color/textCOLOR"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/saving"
                                android:layout_width="108dp"
                                android:layout_height="100dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/saving" />

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/inter"
                                android:text="التوفير"
                                android:textAlignment="center"
                                android:textColor="@color/textCOLOR"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:layout_width="108dp"
                                android:layout_height="98dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/loan" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="قرض بنكي"
                                android:textColor="@color/textCOLOR"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/bills"
                                android:layout_width="96dp"
                                android:layout_height="102dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/bill" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="الفواتير"
                                android:textColor="@color/textCOLOR"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/taxes"
                                android:layout_width="102dp"
                                android:layout_height="90dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/taxx" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="الضرائب"
                                android:textColor="@color/textCOLOR"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />



                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="احتياجات"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/textCOLOR"
                    android:fontFamily="@font/inter"
                    android:layout_gravity="left"
                    android:textSize="20dp"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:background="#D8F2CD"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#63FDF8E1"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/license"
                                android:layout_width="112dp"
                                android:layout_height="101dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/drive" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="رخصة قيادة"
                                android:textColor="@color/textCOLOR"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/renting"
                                android:layout_width="105dp"
                                android:layout_height="99dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/rentt" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="استئجار منزل"
                                android:textColor="@color/textCOLOR"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/insurace"
                                android:layout_width="102dp"
                                android:layout_height="101dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/neww" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="تأمين "
                                android:textColor="@color/textCOLOR"
                                android:fontFamily="@font/inter"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/car"
                                android:layout_width="117dp"
                                android:layout_height="92dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/carr"
                                android:text="احتياجات سياة"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/mail"
                                android:layout_width="116dp"
                                android:layout_height="105dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/mail" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:textColor="@color/textCOLOR"
                                android:text="البريد الالكتروني"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <ImageButton
                                android:id="@+id/laundry"
                                android:layout_width="102dp"
                                android:layout_height="96dp"
                                android:layout_margin="15px"
                                android:layout_weight="1"
                                android:background="#63FDF8E1"
                                android:scaleType="fitXY"
                                android:src="@drawable/lan" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textCOLOR"
                                android:fontFamily="@font/inter"
                                android:text="الغسيل والكي"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="15dp" />

                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />



                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>